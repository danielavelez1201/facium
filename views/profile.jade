doctype html
html(lang='en')
    title Bootstrap Example
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      /* Set black background color, white text and some padding */
      footer 
      background-color: black;
      color: white;
      padding: 15px;
      
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='profile_page')
            img(src='images/facium.png', align='right', width='80px')
        #myNavbar.collapse.navbar-collapse(bgcolor='Blue')
          ul.nav.navbar-nav
            li
              a(href='/activityfeedtransition') Activity feed
            li
              a(href='/chatpagetransition') Chat page
           
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/login')
                span.glyphicon.glyphicon-log-in
                |  Login
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/logout')
                span.glyphicon.glyphicon-log-out
                |  Log out
          form.navbar-form.navbar-right(role='search')
            .form-group.input-group
              input.form-control(type='text', placeholder='Search..')
              span.input-group-btn
                button.btn.btn-default(type='button')
                  span.glyphicon.glyphicon-search
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/profiletransition')
                span.glyphicon.glyphicon-user
                |  My Account

    table
      tr
        
          .well
            H3 
              strong
                Hello #{abc[0].firstname} #{abc[0].lastname}
                  br
            H4
              Hello #{abc[0].username}
               br
               br
            img.img-circle(src='https://cdn3.iconfinder.com/data/icons/black-easy/512/538642-user_512x512.png', height='65', width='65', alt='Avatar')
            Hello 
            br
            br
            Hello #{abc[0].biography}
            br
            Region: #{abc[0].region}
          .well
            p
              .panel.panel-default.text-left
                .panel-body
                  button.btn.btn-primary Score: #{abc[0].score}   
                      
          
              .panel.panel-default.text-left
                .panel-body
                  H4(contenteditable='true') Status: #{abc[0].status}
                a(href="/change_status")
                  button.btn.btn-default.btn-sm(type='button') Change Status
                a(href="/newactivity") 
                  button.btn.btn-default.btn-sm(type='button') Add Activity

      tr
        
          H3
            - for (i = 0; i < abc[0].activity.length; i ++) {
             #box
                .well
                   p #{abc[0].activity[i].description} with #{abc[0].activity[i].participant1} and #{abc[0].activity[i].participant2}
                   br
                   H4
                   p WHERE: #{abc[0].activity[i].location}
                   p WHEN:  #{abc[0].activity[i].date}
                script.
                  (function () { 
                    if (abc[0].activity.status === "past") {
                      document.getElementById("box").style.backgroundColor = '#99C262';
                    }
                    document.getElementById("box").style.backgroundColor = '#FF6C60';
                    }) 
              
              -}
    footer.container-fluid.text-center
      p
        | © 2017 Facium Network. Facium, Inc. All Rights Reserved.
        br
        | Facium™ © 2017 Facium.





